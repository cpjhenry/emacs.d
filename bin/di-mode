#!/bin/bash
# daily-info-mode back-end for Emacs
# 2024-01-10

cond_source() { [ -f $1 ] && . $1; }
cond_source $HOME/.bash_routines

(ind -fA -aruiqX
echo
wwv
solunar -l $GEOLOC -q |sed 's/crescent/cres./'
echo
printf "CPJ %s / " $(cpj |commify)
cpjhbio |sed 's/  /\n/'
[ $(which zodiac) ] && zodiac
) |sed -e "s/é/e/g;s/Ç/C/g;s/ô/o/g;s/[^a-zA-Z0-9 :'\.+/\,()\[\]-\&]//g"

echo
icer -mb
calt |sed '$s/$/\n/'
ruled 32
alert -f
echo
ruled 32
date +%B
echo
calm |sed "s/ $(date +%b)//"
